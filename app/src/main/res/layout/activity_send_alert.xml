<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:text="clear" />

    <ImageView
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/chsmap"
        />

    <ImageView
        android:id="@+id/safe"
        android:layout_width="101dp"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/map"
        android:layout_marginStart="25dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/safe" />

    <ImageView
        android:id="@+id/warning"
        android:layout_width="103dp"
        android:layout_height="91dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/map"
        android:layout_marginEnd="31dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/warning" />

    <ImageButton
        android:id="@+id/send"
        android:layout_width="59dp"
        android:layout_height="54dp"
        android:layout_alignEnd="@+id/warning"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_red_light"
        app:srcCompat="@drawable/sendimg" />

    <EditText
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="61dp"
        android:ems="10"
        android:hint="Enter Custom Message"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/allClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/map"
        android:layout_alignParentStart="true"
        android:text='"All clear!"' />

    <Button
        android:id="@+id/threat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/map"
        android:layout_alignParentEnd="true"
        android:text='"Threat on campus!"' />

</RelativeLayout>